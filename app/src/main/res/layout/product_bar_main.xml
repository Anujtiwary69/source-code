<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="co.stutzen.shopzen.ProductActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@drawable/white_layer"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/backclick"
                android:layout_gravity="left|center_vertical"
                android:gravity="left|center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:src="@mipmap/backicongray"/>
            </LinearLayout>
            <TextView android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/titleText"
                android:text="Item Details"/>
        </FrameLayout>
        <View android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#dedede"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:weightSum="1"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/sortclick"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_weight="0.4">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/sorting"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/titleText"
                    android:text="SORT BY"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/refineclick"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_weight="0.4">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/refine"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/titleText"
                    android:text="REFINE"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:layout_weight="0.2">
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/listtogridclick"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="right|center_vertical"
                    android:layout_weight="0.2">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/listogridicon"
                    android:layout_gravity="right|center_vertical"
                    android:src="@mipmap/list2grid"/>
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/content_product" />
`
</LinearLayout>
