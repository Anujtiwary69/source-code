<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/itemrounded_bg"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <FrameLayout
                    android:layout_width="45dp"
                    android:layout_height="22dp"
                    android:id="@+id/addcartlay"
                    android:layout_gravity="left|top"
                    android:gravity="center">
                <ImageView
                    android:layout_width="22dp"
                    android:id="@+id/addcartbtn"
                    android:layout_height="22dp"
                    android:src="@mipmap/addtocart"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:id="@+id/qtytext"
                    android:layout_gravity="center"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="22dp"
                    android:layout_gravity="right|top"
                    android:gravity="center"
                    android:id="@+id/discountlay"
                    android:background="@drawable/greenrounded_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.4%"
                    android:id="@+id/discounttext"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"/>
                </LinearLayout>
            </FrameLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/proimg"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_menu_gallery"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#f36d78"
                android:id="@+id/productname"
                android:textSize="15sp"
                android:text="Color Shirt"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:id="@+id/productprice"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="@color/titleText"
                    android:textSize="15sp"
                    android:text="Rs.1200"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:textColor="@color/titleTextSecondary"
                    android:textSize="12sp"
                    android:text="1200 Rs"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
